{
  "id": "pediatrics-assessment-v1",
  "name": "Pediatrics Assessment Form",
  "description": "Child health assessment with growth tracking and vaccination history",
  "category": "Pediatrics",
  "version": "1.1.0",
  "author": "Dr. Sarah Chen",
  "icon": "child_care",
  "color": "#43a047",
  "createdAt": "2024-01-12T08:15:00Z",
  "updatedAt": "2024-01-22T16:30:00Z",
  "settings": {
    "allowDraft": true,
    "requireSignature": true,
    "autoSaveInterval": 30,
    "showProgressBar": true
  },
  "sections": [
    {
      "id": "section-child-info",
      "title": "Child Information",
      "description": "Basic information about the child",
      "order": 1,
      "collapsible": true,
      "defaultExpanded": true,
      "fields": [
        {
          "id": "field-child-name",
          "type": "text",
          "label": "Child's Full Name",
          "placeholder": "Enter child's full name",
          "required": true,
          "order": 1
        },
        {
          "id": "field-child-dob",
          "type": "date",
          "label": "Date of Birth",
          "required": true,
          "order": 2
        },
        {
          "id": "field-child-age-years",
          "type": "number",
          "label": "Age (Years)",
          "placeholder": "0-18",
          "required": true,
          "validation": {
            "min": 0,
            "max": 18
          },
          "order": 3
        },
        {
          "id": "field-child-age-months",
          "type": "number",
          "label": "Age (Months)",
          "placeholder": "0-11",
          "required": true,
          "validation": {
            "min": 0,
            "max": 11
          },
          "order": 4
        },
        {
          "id": "field-child-gender",
          "type": "dropdown",
          "label": "Gender",
          "required": true,
          "options": [
            { "value": "male", "label": "Male" },
            { "value": "female", "label": "Female" }
          ],
          "order": 5
        },
        {
          "id": "field-blood-group",
          "type": "dropdown",
          "label": "Blood Group",
          "required": false,
          "options": [
            { "value": "a-pos", "label": "A+" },
            { "value": "a-neg", "label": "A-" },
            { "value": "b-pos", "label": "B+" },
            { "value": "b-neg", "label": "B-" },
            { "value": "ab-pos", "label": "AB+" },
            { "value": "ab-neg", "label": "AB-" },
            { "value": "o-pos", "label": "O+" },
            { "value": "o-neg", "label": "O-" },
            { "value": "unknown", "label": "Unknown" }
          ],
          "order": 6
        }
      ]
    },
    {
      "id": "section-parent-info",
      "title": "Parent/Guardian Information",
      "description": "Contact details of parent or guardian",
      "order": 2,
      "collapsible": true,
      "defaultExpanded": true,
      "fields": [
        {
          "id": "field-parent-name",
          "type": "text",
          "label": "Parent/Guardian Name",
          "placeholder": "Full name",
          "required": true,
          "order": 1
        },
        {
          "id": "field-relationship",
          "type": "dropdown",
          "label": "Relationship to Child",
          "required": true,
          "options": [
            { "value": "mother", "label": "Mother" },
            { "value": "father", "label": "Father" },
            { "value": "guardian", "label": "Legal Guardian" },
            { "value": "grandparent", "label": "Grandparent" },
            { "value": "other", "label": "Other" }
          ],
          "order": 2
        },
        {
          "id": "field-parent-phone",
          "type": "text",
          "label": "Contact Number",
          "placeholder": "+1 (xxx) xxx-xxxx",
          "required": true,
          "order": 3
        },
        {
          "id": "field-parent-email",
          "type": "text",
          "label": "Email Address",
          "placeholder": "parent@email.com",
          "required": false,
          "order": 4
        },
        {
          "id": "field-emergency-contact",
          "type": "text",
          "label": "Alternative Emergency Contact",
          "placeholder": "Name and phone number",
          "required": true,
          "order": 5
        }
      ]
    },
    {
      "id": "section-growth",
      "title": "Growth Measurements",
      "description": "Current growth and development metrics",
      "order": 3,
      "collapsible": true,
      "defaultExpanded": true,
      "fields": [
        {
          "id": "field-weight",
          "type": "number",
          "label": "Weight (kg)",
          "placeholder": "Enter weight",
          "required": true,
          "validation": {
            "min": 0.5,
            "max": 150
          },
          "order": 1
        },
        {
          "id": "field-height",
          "type": "number",
          "label": "Height (cm)",
          "placeholder": "Enter height",
          "required": true,
          "validation": {
            "min": 30,
            "max": 200
          },
          "order": 2
        },
        {
          "id": "field-head-circumference",
          "type": "number",
          "label": "Head Circumference (cm)",
          "placeholder": "For children under 3 years",
          "required": false,
          "conditionalVisibility": {
            "dependsOn": "field-child-age-years",
            "condition": "lessThan",
            "value": 3
          },
          "helpText": "Required for children under 3 years",
          "order": 3
        },
        {
          "id": "field-bmi",
          "type": "number",
          "label": "BMI (Calculated)",
          "readonly": true,
          "order": 4
        },
        {
          "id": "field-growth-percentile",
          "type": "dropdown",
          "label": "Growth Percentile",
          "required": true,
          "options": [
            { "value": "below-5", "label": "Below 5th percentile (Underweight)" },
            { "value": "5-25", "label": "5th-25th percentile" },
            { "value": "25-50", "label": "25th-50th percentile" },
            { "value": "50-75", "label": "50th-75th percentile" },
            { "value": "75-95", "label": "75th-95th percentile" },
            { "value": "above-95", "label": "Above 95th percentile (Overweight)" }
          ],
          "order": 5
        }
      ]
    },
    {
      "id": "section-vitals",
      "title": "Vital Signs",
      "description": "Current vital measurements",
      "order": 4,
      "collapsible": true,
      "defaultExpanded": true,
      "fields": [
        {
          "id": "field-temperature",
          "type": "number",
          "label": "Temperature (Â°F)",
          "placeholder": "98.6",
          "required": true,
          "validation": {
            "min": 95,
            "max": 108
          },
          "order": 1
        },
        {
          "id": "field-heart-rate",
          "type": "number",
          "label": "Heart Rate (bpm)",
          "placeholder": "Varies by age",
          "required": true,
          "helpText": "Normal: Infant 100-160, Child 70-120, Teen 60-100",
          "order": 2
        },
        {
          "id": "field-respiratory-rate",
          "type": "number",
          "label": "Respiratory Rate (breaths/min)",
          "placeholder": "Varies by age",
          "required": true,
          "order": 3
        },
        {
          "id": "field-blood-pressure",
          "type": "text",
          "label": "Blood Pressure (mmHg)",
          "placeholder": "e.g., 90/60",
          "required": false,
          "helpText": "May not be measured for infants",
          "order": 4
        },
        {
          "id": "field-oxygen-sat",
          "type": "number",
          "label": "Oxygen Saturation (%)",
          "placeholder": "98",
          "required": false,
          "validation": {
            "min": 80,
            "max": 100
          },
          "order": 5
        }
      ]
    },
    {
      "id": "section-vaccination",
      "title": "Vaccination History",
      "description": "Immunization records and status",
      "order": 5,
      "collapsible": true,
      "defaultExpanded": false,
      "fields": [
        {
          "id": "field-vaccination-uptodate",
          "type": "dropdown",
          "label": "Vaccination Status",
          "required": true,
          "options": [
            { "value": "uptodate", "label": "Up to date" },
            { "value": "partial", "label": "Partially vaccinated" },
            { "value": "behind", "label": "Behind schedule" },
            { "value": "none", "label": "Not vaccinated" },
            { "value": "unknown", "label": "Unknown" }
          ],
          "order": 1
        },
        {
          "id": "field-vaccines-received",
          "type": "multiselect",
          "label": "Vaccines Received",
          "options": [
            { "value": "bcg", "label": "BCG" },
            { "value": "hepatitis-b", "label": "Hepatitis B" },
            { "value": "dtp", "label": "DTP/DTaP" },
            { "value": "polio", "label": "Polio (OPV/IPV)" },
            { "value": "hib", "label": "Hib" },
            { "value": "pcv", "label": "Pneumococcal (PCV)" },
            { "value": "rotavirus", "label": "Rotavirus" },
            { "value": "mmr", "label": "MMR" },
            { "value": "varicella", "label": "Varicella (Chickenpox)" },
            { "value": "hepatitis-a", "label": "Hepatitis A" },
            { "value": "typhoid", "label": "Typhoid" },
            { "value": "influenza", "label": "Influenza (Flu)" }
          ],
          "order": 2
        },
        {
          "id": "field-last-vaccine-date",
          "type": "date",
          "label": "Last Vaccination Date",
          "required": false,
          "order": 3
        },
        {
          "id": "field-vaccine-reactions",
          "type": "checkbox",
          "label": "Previous Vaccine Reactions",
          "checkboxLabel": "Child has had adverse reactions to vaccines",
          "defaultValue": false,
          "order": 4
        },
        {
          "id": "field-reaction-details",
          "type": "textarea",
          "label": "Reaction Details",
          "placeholder": "Describe the reaction and which vaccine...",
          "required": true,
          "conditionalVisibility": {
            "dependsOn": "field-vaccine-reactions",
            "condition": "equals",
            "value": true
          },
          "order": 5
        }
      ]
    },
    {
      "id": "section-development",
      "title": "Developmental Assessment",
      "description": "Developmental milestones and concerns",
      "order": 6,
      "collapsible": true,
      "defaultExpanded": false,
      "fields": [
        {
          "id": "field-development-concerns",
          "type": "checkbox",
          "label": "Developmental Concerns",
          "checkboxLabel": "Parent/guardian has developmental concerns",
          "defaultValue": false,
          "order": 1
        },
        {
          "id": "field-concern-details",
          "type": "textarea",
          "label": "Describe Concerns",
          "placeholder": "Describe developmental concerns...",
          "required": true,
          "conditionalVisibility": {
            "dependsOn": "field-development-concerns",
            "condition": "equals",
            "value": true
          },
          "order": 2
        },
        {
          "id": "field-milestones",
          "type": "dropdown",
          "label": "Developmental Milestones",
          "required": true,
          "options": [
            { "value": "age-appropriate", "label": "Age-appropriate" },
            { "value": "advanced", "label": "Advanced for age" },
            { "value": "mild-delay", "label": "Mild delay" },
            { "value": "significant-delay", "label": "Significant delay" },
            { "value": "needs-assessment", "label": "Needs formal assessment" }
          ],
          "order": 3
        },
        {
          "id": "field-school-performance",
          "type": "dropdown",
          "label": "School Performance",
          "required": false,
          "conditionalVisibility": {
            "dependsOn": "field-child-age-years",
            "condition": "greaterThan",
            "value": 4
          },
          "options": [
            { "value": "excellent", "label": "Excellent" },
            { "value": "good", "label": "Good" },
            { "value": "average", "label": "Average" },
            { "value": "below-average", "label": "Below Average" },
            { "value": "struggling", "label": "Struggling" },
            { "value": "na", "label": "Not Applicable" }
          ],
          "order": 4
        },
        {
          "id": "field-special-needs",
          "type": "checkbox",
          "label": "Special Needs",
          "checkboxLabel": "Child has diagnosed special needs",
          "defaultValue": false,
          "order": 5
        }
      ]
    },
    {
      "id": "section-current-visit",
      "title": "Current Visit Details",
      "description": "Reason for today's visit",
      "order": 7,
      "collapsible": true,
      "defaultExpanded": true,
      "fields": [
        {
          "id": "field-visit-type",
          "type": "dropdown",
          "label": "Visit Type",
          "required": true,
          "options": [
            { "value": "well-child", "label": "Well-Child Checkup" },
            { "value": "sick-visit", "label": "Sick Visit" },
            { "value": "follow-up", "label": "Follow-up" },
            { "value": "vaccination", "label": "Vaccination Only" },
            { "value": "emergency", "label": "Emergency" }
          ],
          "order": 1
        },
        {
          "id": "field-chief-complaint",
          "type": "textarea",
          "label": "Chief Complaint / Reason for Visit",
          "placeholder": "Describe symptoms or reason for visit...",
          "required": true,
          "order": 2
        },
        {
          "id": "field-symptom-onset",
          "type": "text",
          "label": "Symptom Onset",
          "placeholder": "When did symptoms start?",
          "conditionalVisibility": {
            "dependsOn": "field-visit-type",
            "condition": "in",
            "value": ["sick-visit", "emergency"]
          },
          "order": 3
        },
        {
          "id": "field-fever",
          "type": "checkbox",
          "label": "Fever",
          "checkboxLabel": "Child has fever or had fever recently",
          "defaultValue": false,
          "order": 4
        },
        {
          "id": "field-appetite",
          "type": "dropdown",
          "label": "Appetite",
          "required": false,
          "options": [
            { "value": "normal", "label": "Normal" },
            { "value": "reduced", "label": "Reduced" },
            { "value": "poor", "label": "Poor" },
            { "value": "increased", "label": "Increased" }
          ],
          "order": 5
        },
        {
          "id": "field-sleep",
          "type": "dropdown",
          "label": "Sleep Pattern",
          "required": false,
          "options": [
            { "value": "normal", "label": "Normal" },
            { "value": "disturbed", "label": "Disturbed" },
            { "value": "excessive", "label": "Excessive sleeping" },
            { "value": "insomnia", "label": "Difficulty sleeping" }
          ],
          "order": 6
        }
      ]
    },
    {
      "id": "section-medical-history",
      "title": "Medical History",
      "description": "Past medical history and allergies",
      "order": 8,
      "collapsible": true,
      "defaultExpanded": false,
      "fields": [
        {
          "id": "field-birth-history",
          "type": "dropdown",
          "label": "Birth History",
          "required": true,
          "options": [
            { "value": "normal-vaginal", "label": "Normal vaginal delivery" },
            { "value": "cesarean", "label": "Cesarean section" },
            { "value": "assisted", "label": "Assisted delivery" },
            { "value": "preterm", "label": "Preterm birth" },
            { "value": "unknown", "label": "Unknown" }
          ],
          "order": 1
        },
        {
          "id": "field-birth-weight",
          "type": "number",
          "label": "Birth Weight (kg)",
          "placeholder": "e.g., 3.2",
          "required": false,
          "validation": {
            "min": 0.5,
            "max": 6
          },
          "order": 2
        },
        {
          "id": "field-nicu-history",
          "type": "checkbox",
          "label": "NICU Admission",
          "checkboxLabel": "Child was admitted to NICU after birth",
          "defaultValue": false,
          "order": 3
        },
        {
          "id": "field-chronic-conditions",
          "type": "multiselect",
          "label": "Chronic Conditions",
          "options": [
            { "value": "asthma", "label": "Asthma" },
            { "value": "allergies", "label": "Allergies" },
            { "value": "eczema", "label": "Eczema" },
            { "value": "diabetes", "label": "Diabetes" },
            { "value": "epilepsy", "label": "Epilepsy" },
            { "value": "adhd", "label": "ADHD" },
            { "value": "autism", "label": "Autism Spectrum" },
            { "value": "congenital-heart", "label": "Congenital Heart Defect" },
            { "value": "none", "label": "None" }
          ],
          "order": 4
        },
        {
          "id": "field-allergies",
          "type": "textarea",
          "label": "Known Allergies",
          "placeholder": "Food, medications, environmental allergies...",
          "required": false,
          "order": 5
        },
        {
          "id": "field-hospitalizations",
          "type": "textarea",
          "label": "Previous Hospitalizations",
          "placeholder": "List any previous hospital admissions...",
          "required": false,
          "order": 6
        }
      ]
    },
    {
      "id": "section-assessment",
      "title": "Clinical Assessment",
      "description": "Physician's assessment and plan",
      "order": 9,
      "collapsible": true,
      "defaultExpanded": true,
      "roleAccess": ["Doctor", "Admin"],
      "fields": [
        {
          "id": "field-general-appearance",
          "type": "dropdown",
          "label": "General Appearance",
          "required": true,
          "options": [
            { "value": "well", "label": "Well-appearing" },
            { "value": "mildly-ill", "label": "Mildly ill-appearing" },
            { "value": "moderately-ill", "label": "Moderately ill-appearing" },
            { "value": "severely-ill", "label": "Severely ill-appearing" }
          ],
          "order": 1
        },
        {
          "id": "field-diagnosis",
          "type": "textarea",
          "label": "Assessment / Diagnosis",
          "placeholder": "Enter clinical assessment and diagnosis...",
          "required": true,
          "order": 2
        },
        {
          "id": "field-treatment-plan",
          "type": "textarea",
          "label": "Treatment Plan",
          "placeholder": "Medications, therapies, recommendations...",
          "required": true,
          "order": 3
        },
        {
          "id": "field-follow-up",
          "type": "dropdown",
          "label": "Follow-up Required",
          "required": true,
          "options": [
            { "value": "none", "label": "No follow-up needed" },
            { "value": "1-week", "label": "1 week" },
            { "value": "2-weeks", "label": "2 weeks" },
            { "value": "1-month", "label": "1 month" },
            { "value": "3-months", "label": "3 months" },
            { "value": "6-months", "label": "6 months" },
            { "value": "as-needed", "label": "As needed" }
          ],
          "order": 4
        },
        {
          "id": "field-referral-needed",
          "type": "checkbox",
          "label": "Specialist Referral",
          "checkboxLabel": "Child needs referral to specialist",
          "defaultValue": false,
          "order": 5
        },
        {
          "id": "field-referral-specialty",
          "type": "dropdown",
          "label": "Referral Specialty",
          "required": true,
          "conditionalVisibility": {
            "dependsOn": "field-referral-needed",
            "condition": "equals",
            "value": true
          },
          "options": [
            { "value": "cardiology", "label": "Pediatric Cardiology" },
            { "value": "neurology", "label": "Pediatric Neurology" },
            { "value": "gastro", "label": "Pediatric Gastroenterology" },
            { "value": "pulmonology", "label": "Pediatric Pulmonology" },
            { "value": "ent", "label": "ENT" },
            { "value": "orthopedics", "label": "Orthopedics" },
            { "value": "psychiatry", "label": "Child Psychiatry" },
            { "value": "developmental", "label": "Developmental Pediatrics" },
            { "value": "other", "label": "Other" }
          ],
          "order": 6
        }
      ]
    }
  ],
  "rules": [
    {
      "id": "rule-fever-alert",
      "name": "High Fever Alert",
      "description": "Alert when child has high fever",
      "enabled": true,
      "conditions": {
        "logic": "AND",
        "items": [
          { "field": "field-temperature", "operator": "greaterThan", "value": 102 }
        ]
      },
      "actions": [
        { "type": "showAlert", "message": "High fever detected! Evaluate for infection.", "severity": "warning" }
      ]
    },
    {
      "id": "rule-infant-critical",
      "name": "Infant Critical Assessment",
      "description": "Critical alert for ill-appearing infants",
      "enabled": true,
      "conditions": {
        "logic": "AND",
        "items": [
          { "field": "field-child-age-years", "operator": "lessThan", "value": 1 },
          { "field": "field-general-appearance", "operator": "equals", "value": "severely-ill" }
        ]
      },
      "actions": [
        { "type": "showAlert", "message": "CRITICAL: Severely ill infant requires immediate attention!", "severity": "error" },
        { "type": "triggerWorkflow", "workflowId": "pediatric-emergency" }
      ]
    },
    {
      "id": "rule-underweight",
      "name": "Underweight Alert",
      "description": "Alert for underweight children",
      "enabled": true,
      "conditions": {
        "logic": "AND",
        "items": [
          { "field": "field-growth-percentile", "operator": "equals", "value": "below-5" }
        ]
      },
      "actions": [
        { "type": "showAlert", "message": "Child is below 5th percentile for weight. Nutritional assessment recommended.", "severity": "warning" }
      ]
    }
  ],
  "workflow": {
    "id": "pediatrics-assessment-workflow",
    "steps": [
      { "id": "step-1", "name": "Registration", "assignedRole": "Staff", "status": "pending" },
      { "id": "step-2", "name": "Vitals & Growth", "assignedRole": "Nurse", "status": "pending" },
      { "id": "step-3", "name": "Vaccination Review", "assignedRole": "Nurse", "status": "pending" },
      { "id": "step-4", "name": "Doctor Examination", "assignedRole": "Doctor", "status": "pending" },
      { "id": "step-5", "name": "Treatment/Prescription", "assignedRole": "Doctor", "status": "pending" },
      { "id": "step-6", "name": "Parent Counseling", "assignedRole": "Nurse", "status": "pending" }
    ]
  }
}