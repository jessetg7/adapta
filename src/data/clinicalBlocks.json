{
  "blocks": [
    {
      "id": "block-vitals-core",
      "name": "Core Vital Signs",
      "description": "Essential vital signs for all clinical encounters",
      "category": "clinical",
      "importance": "critical",
      "fields": [
        {
          "id": "bp_systolic",
          "type": "number",
          "label": "Systolic BP",
          "unit": "mmHg",
          "required": true,
          "validation": { "min": 40, "max": 300 },
          "normalRange": { "min": 90, "max": 140 },
          "criticalLow": 90,
          "criticalHigh": 180
        },
        {
          "id": "bp_diastolic",
          "type": "number",
          "label": "Diastolic BP",
          "unit": "mmHg",
          "required": true,
          "validation": { "min": 20, "max": 200 },
          "normalRange": { "min": 60, "max": 90 }
        },
        {
          "id": "heart_rate",
          "type": "number",
          "label": "Heart Rate",
          "unit": "bpm",
          "required": true,
          "validation": { "min": 20, "max": 250 },
          "normalRange": { "min": 60, "max": 100 },
          "criticalLow": 50,
          "criticalHigh": 120
        },
        {
          "id": "respiratory_rate",
          "type": "number",
          "label": "Respiratory Rate",
          "unit": "/min",
          "required": true,
          "validation": { "min": 4, "max": 60 },
          "normalRange": { "min": 12, "max": 20 }
        },
        {
          "id": "temperature",
          "type": "number",
          "label": "Temperature",
          "unit": "°C",
          "required": true,
          "validation": { "min": 30, "max": 45 },
          "normalRange": { "min": 36.1, "max": 37.2 },
          "criticalLow": 35,
          "criticalHigh": 39.5
        },
        {
          "id": "spo2",
          "type": "number",
          "label": "Oxygen Saturation",
          "unit": "%",
          "required": true,
          "validation": { "min": 0, "max": 100 },
          "normalRange": { "min": 95, "max": 100 },
          "criticalLow": 90
        }
      ]
    },
    {
      "id": "block-allergy",
      "name": "Allergy Information",
      "description": "Patient allergy documentation",
      "category": "safety",
      "importance": "critical",
      "fields": [
        {
          "id": "has_allergies",
          "type": "dropdown",
          "label": "Known Allergies?",
          "options": ["No Known Allergies", "Yes - See Below"],
          "required": true
        },
        {
          "id": "drug_allergies",
          "type": "multiselect",
          "label": "Drug Allergies",
          "options": [
            "Penicillin",
            "Sulfa",
            "Aspirin/NSAIDs",
            "Codeine",
            "Morphine",
            "Iodine/Contrast",
            "Local Anesthetics",
            "Latex",
            "Other"
          ],
          "conditionalVisibility": {
            "dependsOn": "has_allergies",
            "condition": "equals",
            "value": "Yes - See Below"
          }
        },
        {
          "id": "allergy_reactions",
          "type": "multiselect",
          "label": "Reaction Type",
          "options": [
            "Rash/Hives",
            "Swelling",
            "Difficulty Breathing",
            "Anaphylaxis",
            "GI Upset",
            "Other"
          ],
          "conditionalVisibility": {
            "dependsOn": "has_allergies",
            "condition": "equals",
            "value": "Yes - See Below"
          }
        },
        {
          "id": "allergy_details",
          "type": "textarea",
          "label": "Allergy Details",
          "placeholder": "Describe allergies and reactions in detail...",
          "conditionalVisibility": {
            "dependsOn": "has_allergies",
            "condition": "equals",
            "value": "Yes - See Below"
          }
        }
      ]
    },
    {
      "id": "block-medication-current",
      "name": "Current Medications",
      "description": "Active medication list",
      "category": "medication",
      "importance": "critical",
      "fields": [
        {
          "id": "takes_medications",
          "type": "dropdown",
          "label": "Currently Taking Medications?",
          "options": ["None", "Yes - See Below"],
          "required": true
        },
        {
          "id": "current_medications_list",
          "type": "textarea",
          "label": "Medication List",
          "placeholder": "List all current medications with doses...",
          "helpText": "Include prescription, OTC, and supplements",
          "conditionalVisibility": {
            "dependsOn": "takes_medications",
            "condition": "equals",
            "value": "Yes - See Below"
          }
        },
        {
          "id": "high_risk_meds",
          "type": "multiselect",
          "label": "High-Risk Medications",
          "options": [
            "Anticoagulants (Warfarin, Heparin)",
            "Insulin",
            "Opioids",
            "Chemotherapy",
            "Immunosuppressants",
            "Digoxin",
            "None"
          ]
        }
      ]
    },
    {
      "id": "block-emergency-assessment",
      "name": "Emergency Assessment",
      "description": "Rapid emergency evaluation",
      "category": "emergency",
      "importance": "critical",
      "fields": [
        {
          "id": "consciousness",
          "type": "dropdown",
          "label": "Consciousness Level",
          "options": ["Alert", "Verbal Response", "Pain Response", "Unresponsive"],
          "required": true
        },
        {
          "id": "airway",
          "type": "dropdown",
          "label": "Airway Status",
          "options": ["Clear", "Partially Obstructed", "Obstructed", "Intubated"],
          "required": true
        },
        {
          "id": "breathing",
          "type": "dropdown",
          "label": "Breathing Status",
          "options": ["Normal", "Labored", "Shallow", "Absent", "Assisted"],
          "required": true
        },
        {
          "id": "circulation",
          "type": "dropdown",
          "label": "Circulation Status",
          "options": ["Good Perfusion", "Poor Perfusion", "Shock", "Cardiac Arrest"],
          "required": true
        },
        {
          "id": "chief_complaint_emergency",
          "type": "textarea",
          "label": "Chief Complaint",
          "placeholder": "Brief description of emergency...",
          "required": true
        }
      ]
    },
    {
      "id": "block-pediatric-growth",
      "name": "Pediatric Growth",
      "description": "Growth measurements for pediatric patients",
      "category": "pediatric",
      "importance": "important",
      "fields": [
        {
          "id": "weight_kg",
          "type": "number",
          "label": "Weight",
          "unit": "kg",
          "required": true,
          "validation": { "min": 0.5, "max": 200 },
          "helpText": "Required for medication dosing"
        },
        {
          "id": "height_cm",
          "type": "number",
          "label": "Height",
          "unit": "cm",
          "validation": { "min": 20, "max": 250 }
        },
        {
          "id": "head_circumference",
          "type": "number",
          "label": "Head Circumference",
          "unit": "cm",
          "validation": { "min": 20, "max": 70 },
          "helpText": "For children under 3 years"
        },
        {
          "id": "bsa",
          "type": "number",
          "label": "Body Surface Area (BSA)",
          "unit": "m²",
          "computed": true,
          "formula": "sqrt((height_cm * weight_kg) / 3600)"
        }
      ]
    }
  ],
  "blockCategories": {
    "clinical": { "label": "Clinical", "color": "#1976d2" },
    "safety": { "label": "Safety", "color": "#f44336" },
    "medication": { "label": "Medication", "color": "#9c27b0" },
    "emergency": { "label": "Emergency", "color": "#d32f2f" },
    "pediatric": { "label": "Pediatric", "color": "#43a047" }
  }
}