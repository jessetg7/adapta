{
  "rules": [
    {
      "id": "rule-1",
      "name": "High Blood Pressure Alert",
      "description": "Alert when systolic BP is critically high",
      "enabled": true,
      "createdAt": "2024-02-15T10:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "blood-pressure-systolic",
          "operator": "greater_than",
          "value": "180"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "send_notification",
          "value": "CRITICAL: Systolic BP > 180 mmHg - Immediate physician notification required"
        },
        {
          "id": "act-2",
          "type": "trigger_workflow",
          "target": "hypertensive-crisis"
        }
      ]
    },
    {
      "id": "rule-2",
      "name": "Pediatric Patient - Age Validation",
      "description": "Show pediatric-specific fields for patients under 18",
      "enabled": true,
      "createdAt": "2024-02-16T11:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "patient-age",
          "operator": "less_than",
          "value": "18"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "show_field",
          "target": "guardian-name"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "guardian-consent"
        },
        {
          "id": "act-3",
          "type": "set_required",
          "target": "guardian-name"
        }
      ]
    },
    {
      "id": "rule-3",
      "name": "Insurance Required Fields",
      "description": "Require policy details when insurance is selected",
      "enabled": true,
      "createdAt": "2024-02-17T09:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "has-insurance",
          "operator": "equals",
          "value": "Yes"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "show_field",
          "target": "insurance-provider"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "policy-number"
        },
        {
          "id": "act-3",
          "type": "set_required",
          "target": "insurance-provider"
        },
        {
          "id": "act-4",
          "type": "set_required",
          "target": "policy-number"
        }
      ]
    },
    {
      "id": "rule-4",
      "name": "Controlled Substance - DEA Required",
      "description": "Require DEA number for controlled substance prescriptions",
      "enabled": true,
      "createdAt": "2024-02-18T14:00:00Z",
      "createdBy": "doctor",
      "conditions": [
        {
          "id": "cond-1",
          "field": "is-controlled",
          "operator": "equals",
          "value": "true"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "set_required",
          "target": "prescriber-dea"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "prescriber-dea"
        }
      ]
    },
    {
      "id": "rule-5",
      "name": "Low Oxygen Saturation Alert",
      "description": "Critical alert for low SpO2 levels",
      "enabled": true,
      "createdAt": "2024-02-19T08:00:00Z",
      "createdBy": "nurse",
      "conditions": [
        {
          "id": "cond-1",
          "field": "oxygen-saturation",
          "operator": "less_than",
          "value": "90"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "send_notification",
          "value": "CRITICAL: SpO2 < 90% - Respiratory distress protocol initiated"
        }
      ]
    },
    {
      "id": "rule-6",
      "name": "Fever Detection",
      "description": "Flag patients with elevated temperature",
      "enabled": true,
      "createdAt": "2024-02-20T10:00:00Z",
      "createdBy": "nurse",
      "conditions": [
        {
          "id": "cond-1",
          "field": "temperature",
          "operator": "greater_than",
          "value": "100.4"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "send_notification",
          "value": "Patient has fever (>100.4Â°F) - Consider infection workup"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "fever-workup-ordered"
        }
      ]
    },
    {
      "id": "rule-7",
      "name": "Emergency Contact for High Fall Risk",
      "description": "Require emergency contact for high fall risk patients",
      "enabled": true,
      "createdAt": "2024-02-21T11:00:00Z",
      "createdBy": "nurse",
      "conditions": [
        {
          "id": "cond-1",
          "field": "fall-risk",
          "operator": "equals",
          "value": "High Risk"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "set_required",
          "target": "emergency-phone"
        },
        {
          "id": "act-2",
          "type": "send_notification",
          "value": "High fall risk patient - Implement fall precautions"
        }
      ]
    },
    {
      "id": "rule-8",
      "name": "Allergy Alert - NKDA Check",
      "description": "Validate allergy documentation",
      "enabled": true,
      "createdAt": "2024-02-22T09:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "has-allergies",
          "operator": "equals",
          "value": "Yes"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "set_required",
          "target": "drug-allergies"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "allergy-severity"
        }
      ]
    },
    {
      "id": "rule-9",
      "name": "Doctor Role - Full Access",
      "description": "Enable additional fields for doctor role",
      "enabled": true,
      "createdAt": "2024-02-23T10:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "__role__",
          "operator": "role_is",
          "value": "doctor"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "show_field",
          "target": "clinical-notes"
        },
        {
          "id": "act-2",
          "type": "show_field",
          "target": "diagnosis-code"
        },
        {
          "id": "act-3",
          "type": "show_field",
          "target": "treatment-plan"
        }
      ]
    },
    {
      "id": "rule-10",
      "name": "STAT Priority - Expedite",
      "description": "Trigger urgent workflow for STAT orders",
      "enabled": true,
      "createdAt": "2024-02-24T08:00:00Z",
      "createdBy": "admin",
      "conditions": [
        {
          "id": "cond-1",
          "field": "priority",
          "operator": "equals",
          "value": "STAT"
        }
      ],
      "actions": [
        {
          "id": "act-1",
          "type": "send_notification",
          "value": "STAT order received - Immediate processing required"
        },
        {
          "id": "act-2",
          "type": "trigger_workflow",
          "target": "stat-order-processing"
        }
      ]
    }
  ]
}